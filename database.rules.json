{
  "rules": {
    ".read": "auth.token.admin === true",
    ".write": "auth.token.admin === true",
    "users": {
      "$user_id": {
        ".read": "auth.uid === $user_id",
        ".write": false,
        "name": {
          ".write": "auth.uid === $user_id"
        }
      }
    },
    "posts": {
      ".read": "auth.uid != null",
      ".write": "auth.token.writer === true",
      "$uid": {
        ".write": "!data.exists() || auth.uid === root.child('posts').child($uid).child('author').val()"
      }
    },
    "subreddit": {
      "$val": {
        ".read": "auth.uid != null"
      }
    },
    "comments": {
      "$uid": {
        ".read": "auth.uid != null"
      }
    }
  }
}